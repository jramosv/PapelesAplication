                @Html.EditorFor(model => model.MP_CALIBRE, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.MP_CALIBRE, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
